<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Insta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>



        <!-- Customize your theme here. -->
    </style>


    <style name="CustomTheme" parent="android:Theme">
        <item name="android:src">@drawable/ic_instagram_wordmark_black_logo_wine</item>
    </style>

    <style name="like" parent="android:Theme">
        <item name="android:src">@drawable/ic_like</item>

    </style>

    <style name="comment" parent="android:Theme">
        <item name="android:src">@drawable/ic_comment</item>

    </style>

    <style name="save" parent="android:Theme">
        <item name="android:src">@drawable/ic_save</item>

    </style>

    <style name="text" parent="android:Theme">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="menu" parent="android:Theme">
        <item name="android:src">@drawable/ic_options</item>
    </style>

    <style name="message" parent="android:Theme">
        <item name="android:src">@drawable/ic_inbox</item>
    </style>

    <style name="button" parent="android:Theme">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="myPosts" parent="android:Theme">
        <item name="android:src">@drawable/ic_my_posts</item>

    </style>

    <style name="mySavedPosts" parent="android:Theme">
        <item name="android:src">@drawable/ic_save</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>















</resources>